#card.page-curl.curl
  .edit
    .editskew
    .bg    
  .top
    .photo
      = image_tag("https://graph.facebook.com/#{user.uid}/picture?type=square", :class => 'profile-photo')
    .header
      %h1.name
        =user.first_name
      %h1
        =user.last_name
  .bottom.shadow-bottom
    %ul.fields
      - user.fields.each do |field|
        %li
          = image_tag field.icon, :class => 'field-icon'
          %span.field-text
            = field.link_value.html_safe
