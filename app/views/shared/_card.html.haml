#card.page-curl.curl
  .edit
    .editskew
    .bg    
  .top
    .photo
      = image_tag("https://graph.facebook.com/#{user.uid}/picture?type=square", :class => 'profile-photo')
    .header
      %h1.name
        =user.first_name
      %h1
        =user.last_name
  .bottom.shadow-bottom
    %ul.fields
      - user.fields.shared.each do |field|
        = render :partial => 'shared/card-field', locals: {field: field}